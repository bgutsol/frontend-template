- var svgSprite = 'img/sprite.svg'

mixin icon(name, modClass)
  if modClass == undefined
    - var modClass = ''
  else
    - var modClass = ' ' + modClass
  svg(class=name + modClass)
    use(xlink:href= svgSprite + '#' + name)


mixin retina(object)
  img(src=object.fileName + '.' + object.format
      srcset=object.fileName + '@2x.' + object.format + ' 2x'
      width=object.width
      height=object.height)
